	<script type="text/javascript">
   $('.slider').slick({
  centerPadding: '1px',
    slidesToShow: 3,
	focusOnSelect:true,
  arrows:false,
  dots:false,
  autoplay:true,
  autoplaySpeed:1500,
  pauseOnHover:false,
  
  responsive: [
    {
      breakpoint: 500,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '0px',
        slidesToShow: 1
      }
    },
  
  ]
});
 
		function myFunction() {
			var x = document.getElementById("myTopnav");
			if (x.className === "topnav") {
				x.className += " responsive";
			} else {
				x.className = "topnav";
			}
		}
	</script>
